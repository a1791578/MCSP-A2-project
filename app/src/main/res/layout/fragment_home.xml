<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/close"
            android:scaleType="center"
            android:layout_gravity="left"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/camera"
            android:scaleType="center"
            android:id="@+id/image"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:text="Scan the Meanu" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/black1"
            android:text="or Find Restaurant near you" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey"
            android:text="Please enter your location or allow access to your\nlocation to find restaurants near you." />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/currentlocation"
            android:scaleType="center"
            android:id="@+id/rest"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/addressinput"
            android:scaleType="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/header"
            android:scaleType="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>